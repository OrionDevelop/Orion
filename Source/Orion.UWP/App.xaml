<prism:PrismUnityApplication x:Class="Orion.UWP.App"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:c="using:Orion.UWP.Converters"
                             xmlns:converters="using:WinRTXamlToolkit.Converters"
                             xmlns:prism="using:Prism.Unity.Windows"
                             RequestedTheme="Dark">
    <prism:PrismUnityApplication.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Controls/CircleImage/CircleImage.xaml" />
                <ResourceDictionary Source="Controls/GridPreview/GridPreview.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <c:NullableToVisibilityConverter x:Key="NullableToVisibilityConverter" />
            <c:ReverseBooleanToVisibilityConverter x:Key="ReverseBooleanToVisibilityConverter" />
            <c:TextToBlockCollectionConverter x:Key="TextToBlockCollectionConverter" />
        </ResourceDictionary>
    </prism:PrismUnityApplication.Resources>
</prism:PrismUnityApplication>
