<ContentDialog x:Class="Orion.UWP.Views.AuthorizationDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               xmlns:prism="using:Prism.Windows.Mvvm"
               xmlns:vm="using:Orion.UWP.ViewModels"
               Title="{x:Bind ViewModel.Title, Mode=OneWay}"
               d:DataContext="{d:DesignInstance vm:AuthorizationDialogViewModel}"
               prism:ViewModelLocator.AutoWireViewModel="True"
               Loaded="AuthorizationDialog_OnLoaded"
               mc:Ignorable="d">
    <Grid>
        <Grid Visibility="{x:Bind ViewModel.IsFirstPage, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="VerticalAlignment" Value="Center" />
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="105" />
                <ColumnDefinition Width="250" />
            </Grid.ColumnDefinitions>
            <!--#region Provider-->
            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Text="サービス :" />
            <ComboBox Grid.Row="0"
                      Grid.Column="1"
                      Height="32"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Center"
                      ItemsSource="{x:Bind ViewModel.Providers, Mode=OneTime}"
                      SelectedValue="{x:Bind ViewModel.SelectedProvider.Value, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <!--#endregion-->
            <!--#region Host-->
            <TextBlock Grid.Row="1"
                       Grid.Column="0"
                       Text="ホスト名 :" />
            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     Height="32"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Center"
                     IsEnabled="{x:Bind ViewModel.HasHost.Value, Mode=OneWay}"
                     PlaceholderText="example.com"
                     Text="{x:Bind ViewModel.Host.Value, Mode=TwoWay}" />
            <!--#endregion-->
            <!--#region Consumer Key-->
            <TextBlock Grid.Row="2"
                       Grid.Column="0"
                       Text="API キー :" />
            <TextBox Grid.Row="2"
                     Grid.Column="1"
                     Height="32"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Center"
                     IsEnabled="{x:Bind ViewModel.HasApiKey.Value, Mode=OneWay}"
                     PlaceholderText="XXXXXXXXXXXXXXXX"
                     Text="{x:Bind ViewModel.ConsumerKey.Value, Mode=TwoWay}" />
            <!--#endregion-->
            <!--#region Consumer Secret-->
            <TextBlock Grid.Row="3"
                       Grid.Column="0"
                       Text="API シークレット :" />
            <TextBox Grid.Row="3"
                     Grid.Column="1"
                     Height="32"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Center"
                     IsEnabled="{x:Bind ViewModel.HasApiKey.Value, Mode=OneWay}"
                     PlaceholderText="XXXXXXXXXXXXXXXX"
                     Text="{x:Bind ViewModel.ConsumerSecret.Value, Mode=TwoWay}" />
            <!--#endregion-->
            <Button Grid.Row="4"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Width="90"
                    HorizontalAlignment="Right"
                    Command="{x:Bind ViewModel.GoAuthorizePageCommand, Mode=OneWay}"
                    Content="認証する"
                    IsEnabled="{x:Bind ViewModel.CanExecuteGoAuthorizePage, Mode=OneWay}" />
        </Grid>
        <Grid Visibility="{x:Bind ViewModel.IsFirstPage, Mode=OneWay, Converter={StaticResource ReverseBooleanToVisibilityConverter}}">
            <WebView Grid.Row="0"
                     Width="500"
                     Height="500"
                     NavigationCompleted="WebView_OnNavigationCompleted"
                     Source="{x:Bind ViewModel.Source.Value, Mode=OneWay}" />
        </Grid>
    </Grid>
</ContentDialog>
