<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:local="using:Orion.UWP.Controls">
    <Style TargetType="local:GridPreview">
        <Setter Property="ItemWidth" Value="0" />
        <Setter Property="ItemHeight" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:GridPreview">
                    <VariableSizedWrapGrid Name="RootGrid"
                                           HorizontalAlignment="Stretch"
                                           HorizontalChildrenAlignment="Stretch"
                                           ItemHeight="{TemplateBinding ItemHeight}"
                                           ItemWidth="{TemplateBinding ItemWidth}"
                                           MaximumRowsOrColumns="2" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
